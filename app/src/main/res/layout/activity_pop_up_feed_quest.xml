<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PopUpFeedQuest"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pop_quest_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:text="@string/reset_password"
        android:textColor="@color/white"
        android:textSize="18sp"/>
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/pop_quest_description"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="5dp"
    android:layout_marginStart="10dp"
    android:text="@string/reset_password"
    android:textColor="@color/white"
    android:textSize="18sp"/>


    <com.google.android.material.button.MaterialButton
        style="@style/CustomAccentButton"
        android:id="@+id/btn_take"
        android:text="Take"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pop_quest_description"
        app:layout_constraintHorizontal_bias="1"
        android:layout_marginTop="10dp"/>

    <com.google.android.material.button.MaterialButton
        style="@style/CustomTextButton"
        android:id="@+id/btn_Cancel"
        android:text="@string/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_take"
        app:layout_constraintTop_toBottomOf="@id/pop_quest_description"
        app:layout_constraintHorizontal_bias="1"
        android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>